    "version": "0.2.0",
    "configurations": [
        {
            "name": "Platform API",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "python": "${workspaceFolder}/platform_api/venv/bin/python",
            "env": {
                "FLASK_APP": "main.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": false,
            "autoStartBrowser": false,
            "cwd": "${workspaceFolder}/platform_api",
            "consoleName": "Platform API"
        }
    ],
    "compounds": [
        {
            "name": "Todo",
            "configurations": [
                "Platform API",
            ],
            "stopAll": true
        }
    ]
}
